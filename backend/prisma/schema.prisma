generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  profile   Profile?
}

model Profile {
  id           Int    @id @default(autoincrement())
  userId       Int    @unique
  bio          String?
  hobbies      String?
  socialLinks  Json?
  customHtml   String?
  theme        String? // light/dark/custom
  User         User    @relation(fields: [userId], references: [id])
}