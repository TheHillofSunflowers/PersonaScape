{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "outDir": "dist",
      "strict": false,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "lib": ["ES2018", "DOM", "DOM.Iterable"],
      "typeRoots": ["./node_modules/@types", "./types"],
      "types": ["node"]
    },
    "include": ["src/**/*", "prisma/**/*"],
    "exclude": ["node_modules"]
  }