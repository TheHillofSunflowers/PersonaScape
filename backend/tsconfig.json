{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "@prisma/client": ["./generated/prisma"]
      }
    },
    "include": ["src/**/*", "prisma/**/*", "generated/**/*"],
    "exclude": ["node_modules"]
  }